- extends "base.jade"
- block main
//-ul.page-breadcrumb
  li Home
  li info
//-h1.page-title education
h1.title= node.title
aside.article-info Submitted on {{ node.created_str() }}
aside.article-info
  = 'in '
  - for term in node.terms.distinct('name').order_by('name')
    a(href=term.get_absolute_url())= term.name
    - if not loop.last
      = ', '
main.article-content
  = node.rev.body|safe
ul.article-fields
  if node.story_url(null):
    li: a(href=node.story_url()) &crarr; Original story
- endblock
